{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  
  "ts-node": {
    "transpileOnly": false,
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "strict": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
    }
  }
}
