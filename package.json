{
  "private": false,
  "name": "@ian1114/forge-css",
  "version": "0.0.0-beta",
  "main": "dist/index.mjs",
  "type": "module",
  "bin": {
    "forge": "dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean dist && rollup --config rollup.config.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest --config=jest.config.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "style-lint": "npx stylelint sass/**/*",
    "dev": "tsx src/cli.ts -o output.css",
    "prod": "npm link && forge -o output.css",
    "clean": "node scripts/clean.js"
  },
  "keywords": [
    "css",
    "sass/scss",
    "bootstrap-like"
  ],
  "author": "ian1114",
  "license": "ISC",
  "description": "A css tool to build utility css from scss files prepared",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "rollup": "^4.44.1",
    "sass-true": "^9.0.0",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "ts-jest": "^29.4.0",
    "ts-jest-mock-import-meta": "^1.3.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "sass": "^1.89.2"
  },
  "overrides": {
    "eslint": "^9.30.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ian5030560/forge-css.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
